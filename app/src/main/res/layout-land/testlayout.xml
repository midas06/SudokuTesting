<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutLeft"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint"
            android:id="@+id/btnHint" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:id="@+id/btnRestart"
            android:layout_below="@+id/btnHint"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="false"
        android:id="@+id/layoutRight"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:id="@+id/btnUndo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note"
            android:id="@+id/btnNote"
            android:layout_below="@+id/btnClearValue"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/btnClearValue"
            android:layout_below="@+id/btnUndo"
            android:layout_alignParentStart="true" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBot"
        android:visibility="visible"
        android:layout_toLeftOf="@+id/layoutRight"
        android:layout_toRightOf="@+id/layoutLeft"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/btnSetValue_1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/btnSetValue_2"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnSetValue_1"
            android:layout_marginStart="21dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/btnSetValue_3"
            android:layout_column="2"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btnSetValue_4"
            android:layout_marginEnd="21dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/btnSetValue_4"
            android:layout_column="3"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutMid"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/layoutRight"
        android:layout_toRightOf="@+id/layoutLeft"
        android:layout_above="@+id/layoutBot"
        android:padding="15dp"
        android:visibility="visible">

        <com.example.harri.sudokutesting.GridView_4x4
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/view2"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />

        <GridView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/cellGridview"
            android:numColumns="4"
            android:layout_centerInParent="true" />

    </RelativeLayout>


</RelativeLayout>